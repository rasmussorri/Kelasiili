<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TrafficPlusWeatherInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Municipality title -->
        <TextView
            android:id="@+id/municipalityNameTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kunnan nimi tähän"
            android:textAlignment="center"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 1) Camera images in vertical chain -->
        <ScrollView
            android:id="@+id/cameraScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/municipalityNameTextView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/weatherContainer"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="5">

            <LinearLayout
                android:id="@+id/cameraImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </ScrollView>

        <!-- 2) Weather block, with AQ label at its bottom -->
        <LinearLayout
            android:id="@+id/weatherContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/cameraScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/airQualityScrollView">

            <!-- Weather label -->
            <TextView
                android:id="@+id/weatherInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sää"
                android:textSize="18sp" />

            <!-- Icon + details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/weatherImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Sääikon"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/weatherTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Tähän säätiedot:\nPilvistä tms.\nLämpötila"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Air quality label now inside weatherContainer -->
            <TextView
                android:id="@+id/airQualityInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ilmanlaatuhommia"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 3) Air-quality scroll -->
        <ScrollView
            android:id="@+id/airQualityScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/weatherContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/airQualityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ilmanlaatu"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
