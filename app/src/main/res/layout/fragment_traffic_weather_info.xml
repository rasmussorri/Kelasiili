<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TrafficPlusWeatherInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Camera region bottom guideline at 50% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCameraBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Weather region bottom guideline at 80% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineWeatherBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <!-- Municipality title -->
        <TextView
            android:id="@+id/municipalityNameTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Kunnan nimi tähän"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Traffic camera images -->
        <ScrollView
            android:id="@+id/cameraScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/municipalityNameTextView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidelineCameraBottom">

            <LinearLayout
                android:id="@+id/cameraImageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </ScrollView>

        <!-- Weather label -->
        <TextView
            android:id="@+id/weatherInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sää"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/guidelineCameraBottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Weather icon -->
        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Sääikon"
            android:src="@android:drawable/btn_star"
            app:layout_constraintTop_toBottomOf="@id/weatherInfoTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Weather details -->
        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="Tähän säätiedot:\nPilvistä tms.\nLämpötila"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/weatherImageView"
            app:layout_constraintStart_toEndOf="@id/weatherImageView"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Air quality scroll (smaller area) -->
        <ScrollView
            android:id="@+id/airQualityScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/weatherImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidelineWeatherBottom"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/airQualityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ilmanlaatu"
                    android:textColor="#444444"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
