<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MunicipalityInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/municipalityInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/municipalityNameTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Kunnan nimi tähän"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/populationTextView"
            android:layout_width="144dp"
            android:layout_height="26dp"
            android:layout_marginTop="60dp"
            android:text="Väkiluku"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.337"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/municipalityNameTextView" />

        <TextView
            android:id="@+id/jobSelfRelianceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Työpaikkaomavaraisuus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/populationTextView"
            app:layout_constraintTop_toBottomOf="@+id/populationTextView" />

        <TextView
            android:id="@+id/populationChangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Väkiluvun muutos esim %"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/jobSelfRelianceTextView"
            app:layout_constraintTop_toBottomOf="@+id/jobSelfRelianceTextView" />

        <TextView
            android:id="@+id/employmentRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Työllisyysaste (%)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/populationChangeTextView"
            app:layout_constraintTop_toBottomOf="@+id/populationChangeTextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>