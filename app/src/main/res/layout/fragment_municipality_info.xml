<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5cae9"
    android:padding="16dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<TextView
    android:id="@+id/municipalityNameTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="POSIO 2023"
    android:textSize="24sp"
    android:gravity="center"
    android:fontFamily="sans-serif-medium"
    android:textColor="#303f9f"
    android:layout_marginBottom="16dp"/>


<TextView
    android:id="@+id/populationTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Väkiluku\n2 923"
    android:textSize="16sp"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"/>


<TextView
    android:id="@+id/jobSelfRelianceTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Työpaikka-omavaraisuus\n89 %"
    android:textSize="16sp"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"/>


<TextView
    android:id="@+id/populationChangeTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Väkiluvun muutos\n- 76"
    android:textSize="16sp"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"/>


<TextView
    android:id="@+id/employmentRateTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Työllisyysaste\n65.3 %"
    android:textSize="16sp"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="12dp"/>

</LinearLayout>
    </ScrollView>
