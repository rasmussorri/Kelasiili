<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- fill color -->
    <solid android:color="#3f51b5" />

    <!-- rounded corners -->
    <corners android:radius="8dp" />

    <!-- optional: give it a border/stroke -->
    <stroke
        android:width="1dp"
        android:color="#303f9f" />

    <!-- optional: inset the content a bit -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
